TZ=__TIMEZONE__
OC_DEFAULT_LANGUAGE=__LANGUAGE__

OC_URL=https://__DOMAIN__
#OC_PUBLIC_URL=https://__DOMAIN__
PROXY_HTTP_ADDR=127.0.0.1:__PORT__
PROXY_TLS=true
OC_INSECURE=false

OC_LOG_LEVEL=error

OC_FORCE_CONFIG_OVERWRITE=true
OC_CONFIG_DIR=__DATA_DIR__/config/
OC_DATA_DIR=__DATA_DIR__
OC_CORS_ALLOW_ORIGINS=[*]

#OC_EXCLUDE_RUN_SERVICES=thumbnails

# Set this to true if you want to enforce passwords on all public shares.
OC_SHARING_PUBLIC_SHARE_MUST_HAVE_PASSWORD=false
OC_SHARING_PUBLIC_WRITEABLE_SHARE_MUST_HAVE_PASSWORD=true

#WEBDAV Settings
PROXY_INSECURE_BACKEND=true
PROXY_ENABLE_BASIC_AUTH=true
WEBDAV_VENDOR=owncloud
WEBDAV_URL=https://__DOMAIN__/remote.php/webdav/
WEBDAV_HTTP_ROOT=/
WEBDAV_DISABLE_PREVIEWS=false
WEBDAV_WEBDAV_NAMESPACE=/users/{{.Id.OpaqueId}}
WEBDAV_CORS_ALLOW_METHODS=[GET POST PUT PATCH DELETE OPTIONS]
WEBDAV_CORS_ALLOW_ORIGINS=[*]
WEBDAV_CORS_ALLOW_HEADERS=[Authorization Origin Content-Type Accept X-Requested-With X-Request-Id Cache-Control]

#OC_ASYNC_UPLOADS=true


PROXY_ENABLE_BASIC_AUTH=true

AUTH_BASIC_AUTH_MANAGER="ldap"

#OC_LDAP_URI="ldap://127.0.0.1:389"
AUTH_BASIC_LDAP_URI="ldap://127.0.0.1:389"

#OC_LDAP_BIND_DN=null
AUTH_BASIC_LDAP_BIND_DN=null

#OC_LDAP_USER_FILTER="ou=users,dc=yunohost,dc=org"
AUTH_BASIC_LDAP_USER_FILTER="ou=users,dc=yunohost,dc=org"

#OC_LDAP_USER_FILTER="(&(|(objectclass=posixAccount))(uid={{username}})(permission=cn=__APP__.main,ou=permission,dc=yunohost,dc=org))"
AUTH_BASIC_LDAP_USER_FILTER="(&(|(objectclass=posixAccount))(uid={{username}})(permission=cn=__APP__.main,ou=permission,dc=yunohost,dc=org))"

#OC_LDAP_USER_SCHEMA_ID="uid"
AUTH_BASIC_LDAP_USER_SCHEMA_ID="uid"

#OC_LDAP_GROUP_BASE_DN="ou=groups,dc=yunohost,dc=org"
AUTH_BASIC_LDAP_GROUP_BASE_DN="ou=groups,dc=yunohost,dc=org"
